<nav>
    <div class='burger_menu'>
      <%= link_to groups_path, class: 'back_btn' do %>
        <img src="https://img.icons8.com/material-outlined/24/ffffff/back--v1.png" alt="back"/>
      <% end %>
    </div>
    <p>LOGIN</p>
        <%= link_to "SIGN UP", new_registration_path(resource_name), class: 'signout-up' %>
  </nav>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "place-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "place-field" %>
  </div>

  <div class="actions">
    <%= f.submit "LOG IN", class: 'actions-btn'%>
  </div>

<% end %>
<div class="session-link">
<%= render "devise/shared/links" %>
</div>
