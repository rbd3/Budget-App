<nav>
    <div class='burger_menu'>
      <%= link_to groups_path, class: 'back_btn' do %>
        <img src="https://img.icons8.com/material-outlined/24/ffffff/back--v1.png" alt="back"/>
      <% end %>
    </div>
    <p>TRANSACTION</p>
        <%= button_to "SIGN OUT", destroy_user_session_path, method: :delete, class: 'signout' %>
  </nav>

<%= form_for :group, url: groups_path do |f| %>
<div class="field">
  <%= f.text_field :name, placeholder: "Transaction Name", class: "transaction-field" %><br />
  </div>

  <div class="field">
  <%= f.text_area :Amount, placeholder: "Transaction Amount", class: "transaction-field" %><br />
  </div>

  <div class="field">
        <%= f.label :group_id, class: "input-group-text" %><br />
        <%= f.collection_select(:group_id, current_user.groups, :id, :name, { prompt: 'Select Category' }, class: 'form-select') %>
      </div>
      
  <div class="actions">
        <%= f.submit "CREATE TRANSACTION"%>
      </div>
<% end %>
